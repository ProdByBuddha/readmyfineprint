
# IPFS Deployment Configuration

# GitHub Repository (for resource fallbacks)
GITHUB_REPO=yourusername/readmyfineprint
GITHUB_BRANCH=main

# IPFS Provider (choose one)
# Option 1: Infura IPFS
INFURA_PROJECT_ID=your_infura_project_id
INFURA_PROJECT_SECRET=your_infura_secret

# Option 2: Pinata
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_KEY=your_pinata_secret_key

# Your live Replit API endpoint
API_BASE_URL=https://your-repl-name.replit.app

# Optional: Custom IPFS node
IPFS_NODE_URL=https://your-ipfs-node.com
