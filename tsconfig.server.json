{
  "extends": "./tsconfig.json",
  "include": ["server/**/*", "shared/**/*", "types/**/*", "scripts/**/*.ts"],
  "exclude": ["node_modules", "build", "dist", "**/*.test.ts", "client/**/*"],
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./dist",
    "module": "ES2020",
    "target": "ES2020",
    "moduleResolution": "node",
    "allowJs": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": false,
    "removeComments": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "lib": ["es2020", "es2015", "es2015.promise", "es2015.core", "dom", "es6"],
    "types": ["node", "express"],
    "typeRoots": ["./node_modules/@types", "./types"]
  }
} 